{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetResourceGroup": {
            "defaultValue": "",
            "type": "string"
        },
        "addressPrefix": {
            "defaultValue": "10.0.0.0/16",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "subnet",
            "type": "string"
        },
        "subnetPrefix": {
            "defaultValue": "10.0.0.0/24",
            "type": "string"
        },
        "vnetName": {
            "defaultValue": "vnet",
            "type": "string"
        },
        "vmJbUserName": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine"
            },
            "defaultValue": "testuser"
        },
        "ExistingNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Resource Group for the VNET where the VM will be placed"
            }
        },
        "vmJbPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            },
            "defaultValue": "Hana07061992!"
        },
        "customUri": {
            "type": "string",
            "metadata": {
                "description": "Uri for SAP Bits"
            }
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Windows Server 2016 Datacenter",
                "SLES 12 SP3",
                "SLES 12 SP3 BYOS",
                "SLES 12 SP2",
                "SLES 12 SP2 BYOS"
            ],
            "defaultValue": "SLES 12 SP3",
            "metadata": {
                "description": "The type of the operating system you want to deploy."
            }
        },
        "vmntpName": {
            "defaultValue": "ntpserver",
            "type": "string"
        },
        "ntpStaticIp": {
            "type": "string",
            "metadata": {
                "description": "static ip address for the NTP virtual machine"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            },
            "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/sap-file-server-md/"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "vmJbName": "hanajb",
        "vmName": "ntpserver",
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[parameters('vnetName')]",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/AzureCAT-GSI/Hana-Test-Deploy/master/vnet.json"
                },
                "parameters": {
                    "vnetResourceGroup": {
                        "value": "[parameters('vnetResourceGroup')]"
                    },
                    "addressPrefix": {
                        "value": "[parameters('addressPrefix')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('subnetPrefix')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('vmJbName')]",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/AzureCAT-GSI/Hana-Test-Deploy/master/Vms/hanajumpbox.json"
                },
                "parameters": {
                    "vmUserName": {
                        "value": "[parameters('vmJbUserName')]"
                    },
                    "ExistingNetworkResourceGroup": {
                        "value": "[parameters('vnetResourceGroup')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "vmPassword": {
                        "value": "[parameters('vmJbPassword')]"
                    },
                    "customUri": {
                        "value": "[parameters('customUri')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('vmntpName')]",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/AzureCAT-GSI/Hana-Test-Deploy/master/sap-ntp-server/ntpserver-infra.json"
                },
                "parameters": {
                    "vmUserName": {
                        "value": "[parameters('vmJbUserName')]"
                    },
                    "ExistingNetworkResourceGroup": {
                        "value": "[parameters('vnetResourceGroup')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "osType": {
                        "value": "[parameters('osType')]"
                    },
                    "vmPassword": {
                        "value": "[parameters('vmJbPassword')]"
                    },
                    "customUri": {
                        "value": "[parameters('customUri')]"
                    },
                    "StaticIP": {
                        "value": "[parameters('ntpStaticIp')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
